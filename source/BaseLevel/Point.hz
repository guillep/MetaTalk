Point
    superclass: #Object;
    instanceSpecification: #(#pointers #words );
    instanceVariables: #(#x #y ).
    
Point >> initialize [
    x := 0.
    y := 0
]

Point >> x [
    ^ x
]

Point >> y [
    ^ y
]

Point >> x: aNumber [
    x := aNumber asNumber
]

Point >> y: aNumber [
    y := aNumber asNumber
]

Point >> asString [
    ^ x asString , '@' , y asString
]