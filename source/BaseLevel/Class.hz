Class
    superclass: #Object;
    instanceSpecification: #(#pointers #words );
    instanceVariables: #(#superclass #methodDict #format ).

Class >> allocate [
    <primitive: 70>
]

Class >> allocate: aSize [
    <primitive: 71>
]

Class >> new [
    ^ self allocate initialize.
]

Class >> new: aSize [
    ^ (self allocate: aSize)
        initialize;
        yourself.
]